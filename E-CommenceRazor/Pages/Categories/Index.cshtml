@page
@model E_CommenceRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                CategoryList
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="bth btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

            <tr>
                <td></td>
            </tr>
        </tbody>
    </table>

</div>
